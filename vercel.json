{
  "version": 2,
  "crons": [
    { "path": "/api/cron/send-queue", "schedule": "* * * * *" },
    { "path": "/api/cron/retry-failed", "schedule": "*/15 * * * *" }
  ]
}
{
  "version": 2,
  "builds": [
    { "src": "api/send.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/send", "dest": "/api/send.js" },
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}

